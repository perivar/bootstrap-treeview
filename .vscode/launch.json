    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch (Chrome) & JavaScript",
            "configurations": [
                "Launch Node App.js",
                "Launch Chrome Public"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Node App.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app.js"
        },
        {
            "name": "Node.js Attach",
            "type": "node",
            "request": "attach",
            "port": 9229
        },
        {
            "name": "Launch Chrome Tests",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/tests"
        },
        {
            "name": "Launch Chrome Public",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/public"
        }
    ]
}